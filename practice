#find longest word in sentence
#str.maketrans
#str.split("[sepatorcharacter]")
def lon(sen):
	removingptable=sen.maketrans('','','"!@#$%^&*()~`:;"{[}]|\<,>.?/"') 
	sen=sen.translate(removingptable)
	print (sen)
	arr=sen.split(' ')
	return max(arr, key=len))




8 june 2017

#factorials
#use range(). range stops up to, not including stop integer
def factorial(num):
	ans=1
	for i in range(1,num+1,1):
		ans=ans*i
	return ans


#reverse string
#use and array [start:stop:step] a negative step starts backwards
#python starts counting at 0
for ReverseString(str):
	return str[::-1]



